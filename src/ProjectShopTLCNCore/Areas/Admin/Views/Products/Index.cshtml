@model IEnumerable<ProjectShopTLCNCore.Models.Products>
@{
	ViewData["Title"] = "Products";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
	<script src="~/myjs/categorie.js"></script>
	<script src="~/myjs/jquery.unobtrusive-ajax.min.js"></script>
}

<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>

<!-- start: Content -->
<div id="content" class="span10">
	<ul class="breadcrumb">
		<li>
			<i class="icon-home"></i>
			<a href="index.html">Home</a>
			<i class="icon-angle-right"></i>
		</li>
		<li><a href="#">Quản Lý Sản phẩm</a></li>
	</ul>

	<div class="row-fluid sortable">
		<div class="box span11">
			<div class="box-header" data-original-title>
				<h2><i class="icon-barcode"></i><span class="break"></span>Sản phẩm</h2>
				<div class="box-icon">
					<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
					<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
				</div>
			</div>
			<div class="box-content">

				@using (Html.BeginForm("Create", "Products", FormMethod.Get))
				{
					<div>
						<button class="btn btn-primary" type="submit">Create New</button>
					</div>
				}

				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
						<tr>
							<th width="8%">Mã SP</th>
							<th width="20%" >Tên SP</th>
							<th width="10%">Giá</th>
							<th width="10%" >NCC</th>
							<th width="15%">Hình ảnh</th>
							<th width="8%">Tình trạng</th>
							<th width="10%">Hành động</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="center">@item.ProductId</td>
								<td class="center">@item.ProductName</td>
								<td class="center">@item.UnitPrice</td>
								<td class="center">@item.SupplierId</td>
								<td class="center">@item.Picture</td>
								<td class="center"><a href="#" class="btn btn-success" data-id="@item.ProductId">@Html.Raw(item.IsDelete ? "Click Hiện" : "Click Ẩn")</a></td>
								<td class="center">
									<a class="btn btn-info" href="/Admin/Products/Edit/@item.ProductId">
										<i class="halflings-icon white edit"></i>
									</a>
									<a class="btn btn-danger" href="/Admin/Products/Delete/@item.ProductId">
										<i class="halflings-icon white trash"></i>
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div><!--/span-->

	</div><!--/row-->
</div><!--/.fluid-container-->
<!-- end: Content -->
