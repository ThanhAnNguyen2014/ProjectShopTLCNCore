@model ProjectShopTLCNCore.Models.Categories

@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- start: Content -->
<div id="content" class="span10">


	<ul class="breadcrumb">
		<li>
			<i class="icon-home"></i>
			<a href="index.html">Home</a>
			<i class="icon-angle-right"></i>
		</li>
		<li>
			<i class="icon-edit"></i>
			<a href="#">Create Categories</a>
		</li>
	</ul>

	<div class="row-fluid sortable">
		<div class="box span11">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Loại Sản Phấm</h2>
				<div class="box-icon">
					<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
					<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<form class="form-horizontal">
					<fieldset>
						<div class="control-group">
							<label  asp-for="CategoryName" class="control-label" for="typeahead">Tên loại sản phẩm</label>
							<div class="controls">
								<input asp-for="CategoryName" type="text" class="span6 typeahead" id="CategoryName" placeholder="Nhập loại sản phẩm">
								<span asp-validation-for="CategoryName" class="text-danger"></span>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="fileInput">Chọn ảnh</label>
							<div class="controls">
								<input class="input-file uniform_on" id="Picture" type="file">
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="typeahead">Hiển thị</label>
							<div class="controls">
								<input type="checkbox" class="span6 " id="IsDisplay">
							</div>
						</div>

						<div class="control-group hidden-phone">
							<label asp-for="CategoryName" class="control-label" for="textarea2">Mô tả</label>
							<div class="controls">
								<textarea class="cleditor" id="Description" rows="3"></textarea>
							</div>
						</div>
						<div class="form-actions">
							<button type="submit" class="btn btn-primary">Save changes</button>
							<button type="reset" class="btn">Cancel</button>
						</div>
					</fieldset>
				</form>

			</div>
		</div><!--/span-->

	</div>
</div>